@* Define Model *@
@model IEnumerable<Producer>

@* Define View Data *@
@{
    ViewData["Title"] = "List of Producers";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(o => o.ImageUrl)</th>
                    <th>@Html.DisplayNameFor(o => o.FullName)</th>
                    <th>@Html.DisplayNameFor(o => o.Bio)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model) 
                {
                    <tr>
                        <td class="align-middle">
                            <img src="@item.ImageUrl" alt="@item.FullName" class="rounded-circle" style="max-width:150px;">
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(o => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(o => item.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"> <i class="bi bi-pencil-square">Edit</i> | </a>
                            <a class="btn btn-outline-primary"> <i class="bi bi-eye">Detail</i> | </a>
                            <a class="btn btn-outline-primary"> <i class="bi bi-trash">Trash</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
