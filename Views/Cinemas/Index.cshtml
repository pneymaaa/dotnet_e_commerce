@* Define Model *@
@model IEnumerable<Cinema>

@* Define View Data *@
@{
    ViewData["Title"] = "List of Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(o => o.Logo)</th>
                    <th>@Html.DisplayNameFor(o => o.Name)</th>
                    <th>@Html.DisplayNameFor(o => o.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img src="@item.Logo" alt="@item.Name" class="rounded-circle" style="max-width:150px;">

                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(o => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(o => item.Description)
                        </td>
                         <td class="align-middle">
                            <a class="btn btn-outline-primary"> <i class="bi bi-pencil-square">Edit</i></a> |
                            <a class="btn btn-outline-info"> <i class="bi bi-eye">Detail</i></a> |
                            <a class="btn btn-outline-danger"> <i class="bi bi-trash">Trash</i></a>
                        </td>
                    </tr>
                }    
            </tbody>
        </table>
    </div>
</div>