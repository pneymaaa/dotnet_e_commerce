@* Define Model *@
@model IEnumerable<Actor>

@* Define View Data *@
@{
    ViewData["Title"] = "List of Actors";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(o => o.ImageUrl)</th>
                    <th>@Html.DisplayNameFor(o => o.FullName)</th>
                    <th>@Html.DisplayNameFor(o => o.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                <tr>
                    <td class="align-middle">
                        <img src="@item.ImageUrl" alt="@item.FullName" class="rounded-circle" style="max-width: 150px;">
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(o => item.FullName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(o => item.Bio)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary"> <i class="bi bi-pencil-square"></i>Edit</a> |
                        <a class="btn btn-outline-info"> <i class="bi bi-eye"></i>Detail</a> |
                        <a class="btn btn-outline-danger"> <i class="bi bi-trash"></i>Trash</a>
                    </td>
                </tr>    
                }
            </tbody>
        </table>
    </div>
</div>

<div class="text-white">
    <a asp-controller="Actors" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i>
        Add New
    </a>
</div>